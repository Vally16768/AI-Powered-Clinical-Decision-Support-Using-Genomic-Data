# —— Server ——
PORT=8000

# —— Provider ——
LLM_PROVIDER=OLLAMA
OLLAMA_HOST=http://127.0.0.1:11434

# —— Model selection ——
MODEL_CANDIDATES=qwen2.5:7b-instruct, qwen2.5:3b-instruct, phi3:mini
MODEL_CATALOG=qwen2.5:7b-instruct=8, qwen2.5:3b-instruct=4, phi3:mini=3
LLM_MIN_VRAM_GB=6

# —— Guidance / prompts (use either inline or file-based) ——
SYSTEM_PROMPT=You are a clinical genomics assistant. Summarize prioritized variants for oncology. Use cautious language, avoid treatment advice, mention uncertainty and suggest validation.
SUMMARY_INSTRUCTIONS=Write a concise, structured paragraph for clinicians. Avoid prescriptive therapy; highlight evidence strength and need for validation.
SUMMARY_MAX_WORDS=150
# SYSTEM_PROMPT_FILE=prompts/system.txt
# SUMMARY_INSTRUCTIONS_FILE=prompts/summary.txt

# —— Data & limits ——
SCORES_CSV=variant_scores.csv
MAX_VARIANTS_PER_PATIENT=50

