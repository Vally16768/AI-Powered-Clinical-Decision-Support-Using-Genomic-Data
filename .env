# —— Provider ——
LLM_PROVIDER="OLLAMA"
OLLAMA_HOST="http://127.0.0.1:11434"

# —— Model selection ——
MODEL_CANDIDATES="qwen2.5:7b-instruct, qwen2.5:3b-instruct, phi3:mini"
MODEL_CATALOG="qwen2.5:7b-instruct=8, qwen2.5:3b-instruct=4, phi3:mini=3"
LLM_MIN_VRAM_GB="6"

# —— Prompts (REQUIRED; files only) ——
SYSTEM_PROMPT_FILE="./prompts/system_prompt_en.txt"
SUMMARY_INSTRUCTIONS_FILE="./prompts/summary_instructions_en.txt"

# —— LLM behavior ——
LLM_TEMPERATURE="0.1"
LLM_TIMEOUT_SECONDS="15"
SUMMARY_MAX_WORDS="0"
SEND_EHR_TO_LLM="true"

# —— Data & scoring ——
SCORES_CSV="variant_scores.csv"
CADD_MAX="40"
W_CADD="0.45"
W_POLYPHEN="0.25"
W_SIFT="0.10"
W_CLINVAR="0.20"

# —— Upload & limits ——
MAX_VARIANTS_PER_PATIENT="400"

# —— Policy & knowledge ——
POLICY_FILE="./policies/default.yaml"
GENE_KNOWLEDGE_CSV="./data/gene_knowledge.csv"

# —— Audit & privacy ——
AUDIT_ENABLED="true"
AUDIT_DIR="./audit"
REDACT_EHR_FIELDS="name,patient_id"   # comma-separated; optional